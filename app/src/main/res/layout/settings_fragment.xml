<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/version_textview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:id="@+id/profile_imageview"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/defalut_profile"
                    android:scaleType="centerCrop" />


                <com.dhivi.inc.topo.utils.FontTextView
                    android:id="@+id/name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignTop="@+id/profile_imageview"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/profile_imageview"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header"
                    android:visibility="visible"
                    app:font_text="@string/fontTitlereguler" />

                <com.dhivi.inc.topo.utils.FontTextView
                    android:id="@+id/ph_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_textview"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/profile_imageview"
                    android:singleLine="true"
                    android:textColor="@color/list_textcolor"
                    android:textSize="@dimen/verysmall_font"
                    android:visibility="visible"
                    app:font_text="@string/fontTitlereguler" />

                <com.dhivi.inc.topo.utils.FontTextView
                    android:id="@+id/email_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ph_textview"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@+id/profile_imageview"
                    android:singleLine="true"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/list_textcolor"
                    android:textSize="@dimen/verysmall_font"
                    android:visibility="visible"
                    app:font_text="@string/fontTitlereguler" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:visibility="visible"
                android:background="@color/divider"></View>

            <RelativeLayout
                android:id="@+id/access_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:layout_marginRight="30dp">


                <com.dhivi.inc.topo.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/access"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_textview"
                    app:font_text="@string/fontTitlereguler" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/password_black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/divider"></View>

            <RelativeLayout
                android:id="@+id/help_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


                <com.dhivi.inc.topo.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/help"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_textview"
                    app:font_text="@string/fontTitlereguler" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/help" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/divider"></View>

            <RelativeLayout
                android:id="@+id/feedback_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


                <com.dhivi.inc.topo.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/feedback"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_textview"
                    app:font_text="@string/fontTitlereguler" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/feedback" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/divider"></View>

            <RelativeLayout
                android:id="@+id/privacy_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


                <com.dhivi.inc.topo.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/privacypolicy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_textview"
                    app:font_text="@string/fontTitlereguler" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/privacy_policy" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/divider"></View>

            <RelativeLayout
                android:id="@+id/terms_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


                <com.dhivi.inc.topo.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/termscond"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_textview"
                    app:font_text="@string/fontTitlereguler" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/terms_conditions" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/divider"></View>

            <RelativeLayout
                android:id="@+id/logout_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">


                <com.dhivi.inc.topo.utils.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="@string/logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_textview"
                    app:font_text="@string/fontTitlereguler" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/logout" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <com.dhivi.inc.topo.utils.FontTextView
        android:id="@+id/version_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copyright_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="@string/version"
        android:textColor="@color/list_textcolor"
        android:textSize="@dimen/verysmall_font"
        app:font_text="@string/fontTitlereguler" />

    <com.dhivi.inc.topo.utils.FontTextView
        android:id="@+id/copyright_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/copyright"
        android:textColor="@color/list_textcolor"
        android:textSize="@dimen/verysmall_font"
        app:font_text="@string/fontTitlereguler" />


</RelativeLayout>